@model BecomeColumnistFormModel

@{ 
    ViewBag.Title = "Become Columnist";
}

<div class="row">
    <div class="col-lg-6 offset-lg-3 col-sm-12 col-xl-6">
        <h2 class="text-center">@ViewBag.Title</h2>
        <form method="post">

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" placeholder="e.g. Ivan">
                <span asp-validation-for="FirstName" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" placeholder="e.g. Ivanov">
                <span asp-validation-for="LastName" class="small text-danger"></span>
            </div>

            <input class="btn btn-primary float-right" type="submit" value="Become a columnist" />
        </form>
    </div>
</div>