@model TeamFormModel

<div class="col-lg-6 offset-lg-3 col-sm-12 col-xl-6">
        <h2 class="text-center">Add a team</h2>
        <form method="post">

            <div class="form-group">
                <label asp-for="TeamFullName">Team's full name</label>
                <input asp-for="TeamFullName" class="form-control" placeholder="e.g. Unicorns of Love">
                <span asp-validation-for="TeamFullName" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TeamTagName">Team's tag</label>
                <input asp-for="TeamTagName" class="form-control" placeholder="e.g. UOL">
                <span asp-validation-for="TeamTagName" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LogoURL"></label>
                <input asp-for="LogoURL" class="form-control" placeholder="Your URL here..">
                <span asp-validation-for="LogoURL" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RegionId">Region</label>
                <select asp-for="RegionId" class="form-control">
                    <option disabled>Major Regions</option>
                    @foreach (var region in Model.CategoriesRegions)
                    {
                        <option value="@region.Id">@region.ShortName</option>
                        if (region.ShortName == "VCS")
                        {
                            <option disabled>Academy Teams</option>
                        }
                        else if(region.ShortName == "LDL") 
                        {
                            <option disabled>European Regional Leagues (ERLs)</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Tier">Tier</label>
                <select asp-for="Tier" class="form-control">
                    <option value="Tier 1">Tier 1</option>
                    <option value="Tier 2">Tier 2</option>
                    <option value="Tier 3">Tier 3</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description of the team</label>
                <textarea asp-for="Description" class="form-control" rows="8"></textarea>
            </div>
            <span asp-validation-for="Description" class="small text-danger"></span>

            <input class="btn btn-dark float-right" type="submit" value="Save" />
        </form>

    </div>