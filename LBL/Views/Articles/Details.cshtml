@model LBL.Services.Articles.ArticleDetailsServiceModel

@{ ViewData["Title"] = Model.Title; }

<div class="row justify-content-center text-center col-12 mb-5">
    <h1>@Model.Title</h1>
</div>

<div>
    <p>@Model.Text</p>
    <p>Image url: @Model.Image</p>
    <p>Author: @Model.FirstName</p>
    <p>Author: @Model.LastName</p>
    <p>Author Id: @Model.AuthorId</p>
    <p>Category name: @Model.CategoryName</p>
    <p>Description: @Model.Description</p>
    <p>UserId: @Model.UserId</p>
</div>