@using System.Web.Mvc
@model LBL.Services.Articles.ArticleDetailsServiceModel

@{ ViewData["Title"] = Model.Title; }

<div class="row justify-content-center text-center col-12 mb-5">
    <h1>@Model.Title</h1>
</div>

<div>
    <p>
    @{ 
        <span style="white-space: pre-wrap">@Model.Text</span>
    }
    </p>

    <p>Author: <b>
    @foreach (var name in Model.AuthorNames)
    {
        @(name.FirstName + " " + name.LastName)
    }
</b>
    </p>
</div>