@model AllArticlesQueryModel

@{
    ViewData["Title"] = "Articles";
}


<div class="row justify-content-center">
    <form method="get">
        <div class="row">

            <div class="form-group col-md-4">
                <div class="form-group">
                    <label asp-for="Category">Category</label>
                    <select asp-for="Category" class="form-control">
                        <option value="">All</option>
                        @foreach (var cat in Model.Categories)
                        {
                            <option value="@cat">@cat</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="SearchTerm"></label>
                <input asp-for="SearchTerm" class="form-control" />
            </div>

            <div class="form-group col-md-4">
                <div class="form-group">
                    <label asp-for="Sorting"></label>
                    <select asp-for="Sorting" class="form-control">
                        <option value="0" selected>Newest to oldest</option>
                        <option value="1">Oldest to newest</option>
                        <option value="2">A to Z</option>
                        <option value="3">Z to A</option>
                    </select>
                </div>
            </div>

            <div class="form-group col-md-3">
                <input type="submit" class="btn btn-primary d-none" value="Search" />
            </div>

        </div>

        @{
            var previousPage = Model.CurrentPage - 1;
            if (previousPage < 1)
            {
                previousPage = 1;
            }

            var maxPage = Math.Ceiling((double)Model.TotalArticles / AllArticlesQueryModel.ArticlesPerPage);
        }

        <div class="row justify-content-center">
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    <li class="page-item">
                        <a class="page-link @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
                           aria-label="Previous"
                           asp-controller="Articles"
                           asp-action="All"
                           asp-route-currentPage="@(previousPage)"
                           asp-route-onecategory="@Model.OneCategory"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-sorting="@((int)Model.Sorting)">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>

                    @for (int i = 1; i <= maxPage; i++)
                    {
                        <li class="page-item">
                            <a class="page-link"
                                asp-controller="Articles"
                                asp-action="All"
                                asp-route-currentPage="@i"
                                asp-route-onecategory="@Model.OneCategory"
                                asp-route-searchTerm="@Model.SearchTerm"
                                asp-route-sorting="@((int)Model.Sorting)">
                                @i
                            </a>
                        </li>
                    }

                    <li class="page-item">
                        <a class="page-link" aria-label="Next"
                           asp-controller="Articles"
                           asp-action="All"
                           asp-route-currentPage="@(Model.CurrentPage + 1)"
                           asp-route-onecategory="@Model.OneCategory"
                           asp-route-searchTerm="@Model.SearchTerm"
                           asp-route-sorting="@((int)Model.Sorting)">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>

    </form>
</div>


<div class="row justify-content-center">
    @foreach (var article in Model.Articles)
    {
    <a href="" style="text-decoration:none; color:black;">
        <div class="row border m-2" style="width:60rem; height:13rem;">
            <span class="col-4">
                <div class="text-center align-content-between " style="height:12rem; width:auto;">
                    <img src="@article.Image" style="max-height:11rem; max-width:12rem; vertical-align:bottom;" class="rounded card-img-top m-3" alt="@article.Title">
                </div>
            </span>
            <span class="mt-3 col-8" style="vertical-align:central;">
                <h5 class="card-title">@article.Title</h5>
                <p class="card-text">@article.Description</p>
            </span>
        </div>
    </a>
    }
</div>

