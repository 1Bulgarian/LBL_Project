@model LBL.Models.Players.AddPlayerFormModel

@{
    ViewData["Title"] = "Add Staff Member";
}


<div class="row">
    <div class="col-lg-6 offset-lg-3 col-sm-12 col-xl-6">
        <h2 class="text-center">Add a player</h2>
        <form method="post">

            <div class="form-group">
                <label asp-for="IGN"></label>
                <input asp-for="IGN" class="form-control" placeholder="e.g. Faker">
                <span asp-validation-for="IGN" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" placeholder="e.g. Ivan">
                <span asp-validation-for="FirstName" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" placeholder="e.g. Ivanov">
                <span asp-validation-for="LastName" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CountryOfBirth"></label>
                <input asp-for="CountryOfBirth" class="form-control" placeholder="e.g. Bulgaria">
                <span asp-validation-for="CountryOfBirth" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageURL"></label>
                <input asp-for="ImageURL" class="form-control" placeholder="Your Image URL here..">
                <span asp-validation-for="ImageURL" class="small text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Position">Position within the team</label>
                <select asp-for="Position" class="form-control">
                    <option value="Top">Top</option>
                    <option value="Jungle">Jungle</option>
                    <option value="Mid">Mid</option>
                    <option value="ADC">ADC</option>
                    <option value="Support">Support</option>
                    <option value="Substitute">Substitute</option>
                    <option value="Head Coach">Head Coach</option>
                    <option value="Strategic Coach">Strategic Coach</option>
                    <option value="Assistant Coach">Assistant Coach</option>
                    <option value="Coach">Coach</option>
                    <option value="Head Analyst">Head Analyst</option>
                    <option value="Remote Analyst">Remote Analyst</option>
                    <option value="Analyst">Analyst</option>
                    <option value="Data Engineer">Data Engineer</option>
                    <option value="Streamer">Streamer</option>
                    <option value="Owner">Owner</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="TeamId"></label>
                <select asp-for="TeamId" class="form-control">
                    @foreach (var team in Model.StaffsTeams)
                    {
                        <option value="@team.Id">[<b>@team.Tag</b>] @team.Name</option>
                    }
                </select>
            </div>

            <input class="btn btn-primary float-right" type="submit" value="Save" />
        </form>

    </div>
</div>